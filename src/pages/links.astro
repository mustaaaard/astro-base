---
import Layout from "../layouts/Layout.astro";
import { SITE, SOCIAL_LINKS } from "../config/site.mjs";
---

<Layout
	title={`Links | ${SITE.title}`}
	description="Find all our links in one place."
	canonicalURL={`${SITE.url}/links`}
>
	<main
		id="main-content"
		role="main"
		class="min-h-screen flex items-center justify-center px-4 py-8"
	>
		<div class="w-full max-w-md text-center">
			<img
				src="/mlkkrt_logo.svg"
				alt={SITE.title}
				class="w-full max-w-full mx-auto mb-4"
			/>
			<p class="mb-4">{"ᕙ(  •̀ ᗜ •́  )ᕗ"}</p>
			<nav class="space-y-2">
				{
					SOCIAL_LINKS.map((link) => (
						// eslint-disable-next-line react/jsx-key
						<a
							href={link.href}
							target="_blank"
							rel="noopener noreferrer"
							class="block w-full py-2 px-4 border border-gray-900 text-gray-900 hover:bg-gray-900 hover:text-white transition-colors duration-200"
						>
							{link.label}
						</a>
					))
				}
			</nav>
		</div>
	</main>
</Layout>
