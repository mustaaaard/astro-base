---
import MilkKrateBox from "./MilkKrateBox";
import ScrollReveal from "./ScrollReveal.tsx";
import { Icon } from "astro-icon/components";
---

<section
	class="max-w-6xl mx-auto px-4 py-20 md:py-32 text-center"
	aria-labelledby="hero-heading"
>
	<ScrollReveal client:load>
		<div class="flex justify-center items-center flex-col gap-3">
			<MilkKrateBox client:load />
			<h1
				id="hero-heading"
				class="font-display text-5xl md:text-6xl font-bold text-gray-900 mb-6"
			>
				Designing interaction with intent
			</h1>
		</div>
	</ScrollReveal>
	<ScrollReveal client:load delay={0.2}>
		<p class="text-xl md:text-2xl text-gray-600 mb-8 max-w-2xl mx-auto">
			Weâ€™re an experimental product studio designing interaction, systems, and
			prototypes across digital and physical forms.
		</p>
	</ScrollReveal>
	<ScrollReveal client:load delay={0.4}>
		<div class="flex flex-col sm:flex-row gap-4 justify-center">
			<a
				href="https://github.com/jonnysmillie/astro-base"
				target="_blank"
				rel="noopener noreferrer"
				class="inline-flex items-center gap-2 px-8 py-3 bg-black text-white rounded-lg hover:bg-gray-800 transition-colors font-medium"
				aria-label="Download Milk Krate from GitHub (opens in new tab)"
			>
				<Icon name="tabler:download" class="w-5 h-5" aria-hidden="true" />
				<span>Download</span>
			</a>
			<a
				href="/about"
				class="inline-block px-8 py-3 bg-white text-gray-900 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors font-medium"
			>
				Learn More
			</a>
		</div>
	</ScrollReveal>
</section>
