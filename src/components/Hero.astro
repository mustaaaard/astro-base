---
import MilkKrateBox from "./MilkKrateBox";
import ScrollReveal from "./ScrollReveal.tsx";
import { Icon } from "astro-icon/components";
---

<section class="px-4 py-8 md:py-12 text-center" aria-labelledby="hero-heading">
	<ScrollReveal client:load>
		<div class="flex justify-center items-center flex-col gap-8">
			<MilkKrateBox client:load />
			<h1
				id="hero-heading"
				class="font-display my-6 text-6xl md:text-7xl lg:text-8xl font-bold text-gray-900"
			>
				Designed to be Felt.
			</h1>
		</div>
	</ScrollReveal>
	<ScrollReveal client:load delay={0.2}>
		<p
			class="text-xl md:text-2xl lg:text-3xl text-gray-800 mb-4 max-w-7xl mx-auto"
		>
			Milk Krate is a Singapore-based design lab crafting refined user
			interfaces and physical forms. We strip away the clutter to find the one
			interaction that matters, helping brands connect with people through
			minimalist systems and purposeful prototypes.
		</p>
	</ScrollReveal>
	<ScrollReveal client:load delay={0.4}>
		<div class="flex flex-col sm:flex-row gap-2 justify-center">
			<a
				href="mailto:hello@mlkkrt.com"
				class="inline-block px-6 py-2 bg-black text-white hover:bg-gray-800 transition-colors font-medium"
				aria-label="Let's discuss your project, email us"
			>
				Let&apos;s Talk
			</a>
			<a
				href="mailto:hello@mlkkrt.com"
				class="inline-block px-6 py-2 bg-white text-gray-900 border border-gray-300 hover:bg-gray-50 transition-colors font-medium"
				aria-label="Email us"
			>
				Email
			</a>
		</div>
	</ScrollReveal>
</section>
